<style>
    .gallery {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .gallery-row {
        display: flex;
        gap: 1rem;
        height: 3.5rem;
    }

    @media (min-width: 640px) {
        .gallery-row {
            height: 6rem;
        }
    }

    @media (min-width: 768px) {
        .gallery-row {
            height: 8rem;
        }
    }

    .gallery-item {
        position: relative;
        overflow: hidden;
        border-radius: 0.75rem;
        /*cursor: pointer;*/
        perspective: 1000px;
    }

    @media (min-width: 768px) {
        .gallery-item {
            border-radius: 2rem;
        }
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease-out;
    }

    .gallery-item::after {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.15);
        transition: opacity 0.3s ease-out;
        pointer-events: none;
    }

    .gallery-item:hover::after {
