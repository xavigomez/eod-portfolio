---
import { Image } from "astro:assets";
import Button from "~/components/starwind/button/Button.astro";
import meImage from "~/assets/images/me.jpg";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<section id="about" class:list={["space-y-12", className]}>
    <div
        class="flex items-end [&>hr]:border-t-2 [&>hr]:border-foreground [&>hr]:mb-2"
    >
        <h2 class="text-5xl sm:text-7xl font-bold">About me</h2>
        <hr class="flex-1" />
        <hr class="w-14 ml-2" />
    </div>
    <div
        class="flex gap-6 md:gap-4 items-center justify-between flex-col md:flex-row"
    >
        <div class="w-full md:w-1/2 flex justify-center">
            <div class="gallery-item w-72 rounded-4xl">
                <Image
                    src={meImage}
                    alt="About me"
                    class="aspect-auto"
                    loading="lazy"
                />
            </div>
        </div>
        <div class="w-full md:w-1/2 space-y-6">
            <p class="text-xl">
                I'm a product designer with over 6 years of experience,
                combining analytical thinking with creative problem-solving. I
                focus on end-to-end product design that turns complex problems
                into clear, user-centered solutions with real business impact.
            </p>
            <p class="text-xl font-bold">Do you want to know more?</p>
            <Button size="lg" href="/about-me">More about me</Button>
        </div>
    </div>
</section>
