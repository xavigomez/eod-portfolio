---
import type { Review } from "~/types/about";

interface Props {
    class?: string;
    items: Review[];
}

const { class: className, items } = Astro.props;
---

<section id="reviews" class:list={["space-y-8", className]}>
    <h2 class="text-5xl font-extrabold tracking-[-0.02em]">
        What people have said about me
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
            items.map((review) => (
                <article class="tilt-card border border-foreground flex flex-col bg-white shadow-lg">
                    <div class="p-6 space-y-4 flex-1">
                        <img
                            src={review.avatar}
                            alt={review.name}
                            class="size-16 rounded-full object-cover"
                        />
                        <div>
                            <h3 class="font-bold text-lg">{review.name}</h3>
                            <p class="text-muted-foreground text-sm">
                                {review.role}
                            </p>
                        </div>
                        <p class="text-base">{review.quote}</p>
                    </div>
                    <div class="flex justify-between items-center px-6 py-4 border-t border-foreground">
                        <span class="text-muted-foreground">
                            {review.company}
                        </span>
                        <span class="text-muted-foreground">{review.year}</span>
                    </div>
                </article>
            ))
        }
    </div>
</section>
