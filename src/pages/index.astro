---
import Layout from "../layouts/Layout.astro";
import Navbar from "~/components/navigation/Navbar.astro";
---

<Layout>
    <Fragment slot="sidebar">
        <Navbar />
    </Fragment>

    <div class="px-4 py-2 sm:px-8 sm:py-4 lg:p-0">
        <section>
            <h1
                class="text-7xl xl:text-[98px] font-bold tracking-[-0.04em] leading-[0.85]"
            >
                Elisabet Osuna
            </h1>
            <h2 class="text-6xl xl:text-8xl tracking-[-0.04em] leading-[1.2]">
                Product Designer
            </h2>
            <p class="text-2xl xl:text-[28px] leading-[1.2]">
                Hi! I have <strong>6+ years</strong> of experience designing great
                <strong>user</strong> experiences and impactful products that help
                <strong>businesses grow</strong>, working closely with
                <strong>cross-functional teams</strong>.
            </p>
        </section>
    </div>
    <div class="h-379">Other content here</div>
</Layout>
